pipeline {
    agent none 
    stages {
        stage('Build') { 
            steps {
                sh 'python -m venv .venv' 
                sh 'source .venv/bin/activate'
                sh 'pip install pyhamcrest'
            }
        }
        stage('Test'){
            steps {
                sh 'python -m unittest test_with_unittest.py'
            }
        }
    }
}